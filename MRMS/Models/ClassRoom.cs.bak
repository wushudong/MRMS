        [Required]
        [Display(Name = "教室编号")]
        public string RoomNum
        {
            get
            {
                return this._RoomNum;
            }
            set
            {
                if (!Equals(this._RoomNum, value))
                {
                    this._RoomNum = value;
                    this.OnPropertyChanged("RoomNum");
                }
            }
        }
        private string _TerminalId;
        [DataMember]
        [Display(Name = "终端编号")]
