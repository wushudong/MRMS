        [DataMember]
        [Display(Name = "教学楼")]
        [Required]
        public ClassroomBuilding ClassroomBuilding
        {
            get
            {
                return this._ClassroomBuilding;
            }
            set
            {
                if (!Equals(this._ClassroomBuilding, value))
                {
                    this._ClassroomBuilding = value;
